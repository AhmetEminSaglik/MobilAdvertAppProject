<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="30dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:paddingTop="15sp">

            <TextView
                android:layout_width="90sp"
                android:layout_height="match_parent"
                android:text="Username"
                android:textColor="@color/red"
                android:textSize="15sp" />

            <TextView
                android:layout_width="10sp"
                android:layout_height="50sp"
                android:text=": "
                android:textSize="15sp" />
        </LinearLayout>


        <EditText
            android:id="@+id/usernametxt_profilUpdateFragment"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="Client Username "
            android:text="User"
            android:textColor="@color/red"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100sp"

            android:layout_height="50sp"
            android:orientation="horizontal"
            android:paddingTop="15sp">

            <TextView
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="16sp" />

            <TextView
                android:layout_width="10sp"
                android:layout_height="50sp"
                android:text=": "
                android:textSize="15sp" />
        </LinearLayout>


        <EditText
            android:id="@+id/fullNameTxt_profilUpdateFragment"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:hint="Client Full Name "
            android:inputType="textPersonName"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100sp"

            android:layout_height="50sp"
            android:orientation="horizontal"
            android:paddingTop="15sp">

            <TextView
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="15sp" />

            <TextView
                android:layout_width="10sp"
                android:layout_height="50sp"
                android:text=": "
                android:textSize="15sp" />
        </LinearLayout>


        <EditText
            android:id="@+id/passwordTxt_profilUpdateFragment"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:hint="Client password "
            android:inputType="textPassword"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:paddingTop="15sp"
            android:textSize="15sp">

            <TextView
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:text="Phone No"
                android:textSize="15sp" />

            <TextView
                android:layout_width="10sp"
                android:layout_height="50sp"
                android:text=": "
                android:textSize="15sp" />
        </LinearLayout>


        <EditText

            android:id="@+id/phoneNoTxt_profilUpdateFragment"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:hint="Client Phone No "
            android:inputType="phone"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100sp"

            android:layout_height="50sp"
            android:orientation="horizontal"
            android:paddingTop="15sp">

            <TextView
                android:layout_width="90sp"
                android:layout_height="wrap_content"
                android:text="E-Mail"
                android:textSize="15sp" />

            <TextView
                android:layout_width="10sp"
                android:layout_height="50sp"
                android:text=": "
                android:textSize="15sp" />
        </LinearLayout>


        <EditText
            android:id="@+id/mailTxt_profilUpdateFragment"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:hint="Client mail "
            android:inputType="textEmailAddress"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnUpdate_ProfilUpdateFragment"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Update " />


</LinearLayout>